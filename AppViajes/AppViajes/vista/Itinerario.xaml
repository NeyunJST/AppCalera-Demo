<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppViajes.vista.Itinerario">
    <ContentPage.ToolbarItems>
        <ToolbarItem x:Name="btnIngresar" Text="Grabar" Clicked="btnIngresar_Clicked" />
    </ContentPage.ToolbarItems>
    <ContentPage.Content>
        <StackLayout Margin="20">
            <Label Text="Registro de Itinerario" FontAttributes="Bold" FontSize="Medium" HorizontalOptions="Center" Margin="10,10,10,10" />

            <Image Source="soyuz02.jpg" />
            <Label Text="Origen" FontAttributes="Bold" FontSize="Medium" />
            <Picker Title="Seleccione Origen" x:Name="lista01" />
            
            <Label Text="Destino" FontAttributes="Bold" FontSize="Medium" />
            <Picker Title="Seleccione destino" x:Name="lista02" />
            
            <Label Text="Distancia (km)" FontAttributes="Bold" FontSize="Medium" />
            <Entry x:Name="txtKm" />
            
            <Label Text="Duración de viaje (hr)" FontAttributes="Bold" FontSize="Medium" />
            <Entry x:Name="txtHoras" />

            <Label Text="Precio" FontAttributes="Bold" FontSize="Medium" />
            <Entry x:Name="txtPre" />
            <Button x:Name="btnGrabar" Text="Grabar" />

        </StackLayout>
    </ContentPage.Content>
</ContentPage>